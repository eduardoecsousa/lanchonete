datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ===============================
// USU√ÅRIOS
// ===============================
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  cpf       String
  criadoEm  DateTime @default(now())
}

// ===============================
// ENDERE√áO
// ===============================
model Address {
  id            Int @id @default(autoincrement())
  road          String
  number        String
  neighborhood  String
  city          String? 

  clientId Int @unique
  client   Client @relation(fields: [clientId], references: [id])
}



// ===============================
// CLIENTE
// ===============================
model Client {
  id        Int      @id @default(autoincrement())
  name      String
  email     String?   @unique
  cpf       String?   @unique
  phone     String
  createAt  DateTime @default(now())

  address   Address?
}

// ===============================
// PRODUTOS
// ===============================
model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  active     Boolean  @default(true)

  item     ItemOrder[]
}

// ===============================
// ENTREGA
// ===============================
model Delivery {
  id        Int      @id @default(autoincrement())
  address   String
  taxa      Float
  criadoEm DateTime @default(now())

  orderId Int   @unique
  order   Order @relation(fields: [orderId], references: [id])
}

// ===============================
// üßæ PEDIDOS
// ===============================
model  Order{
  id        Int      @id @default(autoincrement())
  status    String
  total     Float

  itens     ItemOrder[]
  delivery   Delivery?
}

// ===============================
// üîó RELA√á√ïES
// ===============================
model ItemOrder {
  id         Int      @id @default(autoincrement())
  quantity   Int
  price      Float

  orderId   Int
  productId  Int

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}
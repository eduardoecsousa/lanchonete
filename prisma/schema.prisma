datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ===============================
// USU√ÅRIOS
// ===============================
model User {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  cpf       String
  criadoEm  DateTime @default(now())
}

// ===============================
// ENDERE√áO
// ===============================
model Address {
  id            Int @id @default(autoincrement())
  road          String
  number        String
  neighborhood  String
  cidade        String? 

  client        Client[]
}



// ===============================
// CLIENTE
// ===============================
model Client {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String?   @unique
  cpf       String?   @unique
  telefone  String
  criadoEm  DateTime @default(now())

  addressId Int 
  address Address @relation(fields: [addressId], references: [id])
}

// ===============================
// PRODUTOS
// ===============================
model Product {
  id        Int      @id @default(autoincrement())
  nome      String
  preco     Float
  ativo     Boolean  @default(true)

  item     ItemOrder[]
}

// ===============================
// ENTREGA
// ===============================
model Delivry {
  id        Int      @id @default(autoincrement())
  endereco  String
  taxa      Float
  criadoEm DateTime @default(now())

  orderId Int   @unique
  order   Order @relation(fields: [orderId], references: [id])
}

// ===============================
// üßæ PEDIDOS
// ===============================
model  Order{
  id        Int      @id @default(autoincrement())
  status    String
  total     Float

  itens     ItemOrder[]
  entrega   Delivry?
}

// ===============================
// üîó RELA√á√ïES
// ===============================
model ItemOrder {
  id         Int      @id @default(autoincrement())
  quantity   Int
  price      Float

  orderId   Int
  productId  Int

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}